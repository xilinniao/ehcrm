<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="shopHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>
				/shop/admin/shopInfo.xhtml=shopInfoCtrl
				/shop/admin/goodsCategory.xhtml=goodsCategoryCtrl
				/shop/admin/siteCategory.xhtml=siteCategoryCtrl
				/shop/admin/goodsInfo.xhtml=goodsInfoCtrl
				/shop/admin/brandInfo.xhtml=brandInfoCtrl
				/shop/admin/articleCategory.xhtml=articleCategoryCtrl
				/shop/admin/article.xhtml=articleCtrl
				/shop/admin/pageCategory.xhtml=pageCategoryCtrl
				/shop/admin/indexCategory.xhtml=indexCategoryCtrl
				/shop/admin/orders.xhtml=adminOrderCtrl
			</value>
		</property>
	</bean>
    
	<bean name="shopInfoCtrl" class="com.eh.shop.admin.web.ShopInfoCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="shopLogic" ref="shopLogic"/>
   	</bean>
   
   <bean name="goodsCategoryCtrl" class="com.eh.shop.admin.web.GoodsCategoryCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="goodsCategoryLogic" ref="goodsCategoryLogic"/>
        <property name="shopLogic" ref="shopLogic"/>
   </bean>
   
   <bean name="siteCategoryCtrl" class="com.eh.shop.admin.web.SiteCategoryCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="siteCategoryLogic" ref="siteCategoryLogic"/>
   </bean>
   
    <bean name="goodsInfoCtrl" class="com.eh.shop.admin.web.GoodsInfoCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="goodsLogic" ref="goodsLogic"/>
        <property name="pageCategoryLogic" ref="pageCategoryLogic"/>
        <property name="goodsCategoryLogic" ref="goodsCategoryLogic"/>
        <property name="brandInfoLogic" ref="brandInfoLogic"/>
   </bean>
   
   <bean name="brandInfoCtrl" class="com.eh.shop.admin.web.BrandInfoCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="brandInfoLogic" ref="brandInfoLogic"/>
   </bean>
   
   <bean name="articleCategoryCtrl" class="com.eh.shop.admin.web.ArticleCategoryCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="articleCategoryLogic" ref="articleCategoryLogic"/>
   </bean>
   
   <bean name="articleCtrl" class="com.eh.shop.admin.web.ArticleCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="articleLogic" ref="articleLogic"/>
   </bean>
   
   <bean name="pageCategoryCtrl" class="com.eh.shop.admin.web.PageCategoryCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="pageCategoryLogic" ref="pageCategoryLogic"/>
   </bean>
   
   <bean name="indexCategoryCtrl" class="com.eh.shop.admin.web.IndexCategoryCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="indexCategoryLogic" ref="indexCategoryLogic"/>
   </bean>
   
   <bean name="adminOrderCtrl" class="com.eh.shop.admin.web.OrderCtrl">
        <property name="methodNameResolver" ref="methodNameResolver"/>
        <property name="orderLogic" ref="orderLogic"/>
   </bean>
</beans>