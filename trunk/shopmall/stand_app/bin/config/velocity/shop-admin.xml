<?xml version="1.0" encoding="UTF-8"?>
<root>
	<velocity name="shop-admin-goods-info-list">
		<![CDATA[
		{
			"sEcho":"$sEcho",
			"iTotalRecords": "$page.totalCount",
		    "iTotalDisplayRecords": "$page.totalCount",
		    "aaData": [
		    	#foreach( $x in $page.result )
		    		[
		    		"<input type='checkbox' />",
		    		"$x.goodsName",
		    		"$!x.goodNo",
		    		"$x.category.categoryName",
		    		"$!x.originalPrice",
		    		"$!x.discountPrice",
		    		"1",
		    		"1",
		    		"$!x.leavesCount",
		    		"<a href='goodsInfo.xhtml?method=editGoods&goodsId=$x.goodsId' title='编辑'>[编辑]</a>&nbsp;<a href='goodsInfo.xhtml?method=editGoods&goodsId=$x.goodsId' title='浏览'>[浏览]</a>"
		    		]#if( $foreach.hasNext ),#end		    		
		    	#end
		    ]
		}
		]]>
	</velocity>
	
